<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_extra_small"
    android:layout_marginBottom="@dimen/margin_extra_small"
    android:layout_marginStart="@dimen/margin_normal"
    android:layout_marginEnd="@dimen/margin_normal"
    card_view:cardCornerRadius="@dimen/card_view_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/step_short_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:gravity="start"
            android:lineSpacingExtra="@dimen/line_spacing_normal"
            android:padding="@dimen/padding_normal"
            android:text="@string/example_short_description"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/text_size_normal" />

        <ImageView
            android:id="@+id/right_arrow_step"
            android:layout_width="@dimen/navigation_button_size_small"
            android:layout_height="@dimen/navigation_button_size_small"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_normal"
            android:layout_weight="0.1"
            android:background="@drawable/ic_angle_right_font"
            android:contentDescription="@string/step_icon_description"
            android:gravity="end" />

    </LinearLayout>
</android.support.v7.widget.CardView>